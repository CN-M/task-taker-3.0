  <div class="flex flex-col items-center p-10 space-y-5">
    <h2 class="text-2xl font-sans font-semibold">
      Log in to make the best of Task Taker
    </h2>
    <div class="flex flex-col items-center">
      <form hx-post="/account/login" class="flex flex-col space-y-3">
        <input
          class="border p-2 border-emerald-500 rounded-md focus:border-blue-500"
          type="email"
          name="email"
          placeholder="hulk@hogan.com"
          autoComplete="email"
          required
        />
        <input
          class="border p-2 border-emerald-500 rounded-md focus:border-blue-500"
          type="password"
          name="password"
          autoComplete="current-password"
          placeholder="password"
          required
        />
        <button
          class="p-3 rounded-md bg-emerald-600 text-white"
          type="submit"
        >
          Log In
        </button>
        <% if (isError)  { %>
          <p class="text-red-500 text-sm">{`Error: ${errorMessage}`}</p>
        <% } %>
        <p class="text-sm">
          Don't have an account?
          <a
          href="/register"
            class="text-blue-500 cursor-pointer"
          >
            Register here
        </a>
        </p>
      </form>
    </div>
  </div>

