<div class="flex bg-emerald-500 rounded-lg px-5 py-2">
    <% if (user && isAuthenticated) { %>
      <button hx-post="/account/logout" hx-replace-url="/login" hx-target="#container" hx-swap="innerHTML"  >
        Logout
      </button>
    <% } else { %>
      <a href="/login">
        Login
      </a>
    <% } %>
    <% if (isError) { %>
      <p class="text-red-500 text-sm"><%= errorMessage %></p>
    <% } %>
  </div>

