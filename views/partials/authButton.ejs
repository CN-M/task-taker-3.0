<div class="bg-emerald-500 rounded-lg px-5 py-2">
    <% if (user && isAuthenticated) { %>
      <button hx-post="/account/logout" hx-indicator="#loading">
        Logout
      </button>
      <p id="loading" class="htmx-indicator">Logging Out...</p>
    <% } else { %>
      <a href="/login">
        Login
      </a>
    <% } %>
    <% if (isError) { %>
      <p class="text-red-500 text-sm"><%= errorMessage %></p>
    <% } %>
  </div>